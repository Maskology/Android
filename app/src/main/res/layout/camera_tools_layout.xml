<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_gravity="bottom"
    android:background="@drawable/transparent_gradient_background">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btn_shutter"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/ic_outline_circle_shutter"
        android:padding="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btn_galery"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_baseline_photo_library"
        android:padding="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_shutter"
        app:layout_constraintEnd_toStartOf="@+id/btn_shutter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_shutter" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btn_flip_camera"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_baseline_flip_camera_ios"
        android:padding="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_shutter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_shutter"
        app:layout_constraintTop_toTopOf="@+id/btn_shutter" />


</androidx.constraintlayout.widget.ConstraintLayout>