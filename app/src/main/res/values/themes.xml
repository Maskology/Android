<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Maskology" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_green</item>
        <item name="colorPrimaryVariant">@color/dark_brown</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/cream</item>
        <item name="colorSecondaryVariant">@color/light_green</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Text Style. -->
    <style name="TextStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <style name="TextStyle.Header">
        <item name="android:fontFamily">@font/noto_sans_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextStyle.SubHeader">
        <item name="android:fontFamily">@font/noto_sans_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextStyle.Title">
        <item name="android:fontFamily">@font/noto_sans_bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextStyle.SubTitle">
        <item name="android:fontFamily">@font/noto_sans_medium</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextStyle.Description">
        <item name="android:fontFamily">@font/noto_sans_regular</item>
        <item name="android:textSize">10sp</item>
    </style>

    <!-- Item Card Style. -->
    <style name="CardViewSearch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/dark_brown</item>
    </style>

    <style name="CardViewBanner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="strokeColor">@color/dark_brown</item>
    </style>

    <!-- Item SearchView Style. -->
    <style name="AppSearchView" parent="Widget.AppCompat.SearchView" >
        <item name="android:textColorHint">@color/light_green</item>
        <item name="android:editTextColor">@color/dark_green</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">14sp</item>
        <item name="android:queryBackground">@android:color/transparent</item>
    </style>

</resources>